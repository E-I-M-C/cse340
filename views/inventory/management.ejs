<%# If there's a title make an h1 element that has the title,
 else redirect to default index route %>
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="management links">
  <a href="/inv/newClassification" title="Click to add a new vehicle classification">Add New Classification</a>
  <a href="/inv/newVehicle" title="Click to add a new vehicle">Add New Vehicle</a>
</div>

<h2 class="management">Manage Inventory</h2>
<p class="management">Please select a classification to view inventory items that belong to it.</p>
<div class="management">
  <%- classificationSelect %>
</div>

<table id="inventoryDisplay" class="management"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>