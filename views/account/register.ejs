<%# If there's a title make an h1 element that has the title,
 else redirect to default index route %>
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<form class="form-generic form-register" action="/account/register" method="post">
    <span class="signin-details">ALL FIELDS ARE REQUIRED.</span>
    <label for="account_firstname">First name:</label>
    <input type="text" name="account_firstname" required>
    <label for="account_lastname">Last name:</label>
    <input type="text" name="account_lastname" required>
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" required>
    <label for="account_password">Password:</label>
    <input type="password" name="account_password" id="password" pattern="[a-zA-Z0-9]{12,}" required>
    <span class="signin-details">Password must be minimum of 12 characters and contain 1 capital letter, 1 number, and 1 special character.</span>
    <span id="password-button">Show Password</span>
    <input type="submit" value="Register">
</form>

<script src="/js/script.js"></script>