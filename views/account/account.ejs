<%# If there's a title make an h1 element that has the title,
 else redirect to default index route %>
 <% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
      <% }) %>
  </ul>
<% } %>

<h2 class="management">Welcome <%- account_firstname %></h2>

<p class="management">You're logged in.</p>

<a href="/account/update/<%- account_id %>">Edit Account Information</a>

<% if (management) { %>
  <%- management %>
<% } %>