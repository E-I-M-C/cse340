<%# If there's a title make an h1 element that has the title,
 else redirect to default index route %>
 <% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
      <% }) %>
  </ul>
<% } %>

<form class="form-generic" id="loginForm" action="/account/login" method="post">
  <label for="account_email">Email:</label>
  <input type="email" name="account_email" required placeholder="Enter a valid email address">
  <label for="account_password">Password:</label>
  <input type="password" name="account_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
  <span class="signin-details">Password must be minimum of 12 characters and contain 1 capital letter, 1 number, and 1 special character.</span>
  <span id="password-button">Show Password</span>
  <input type="submit" value="Login">
  <p>No account? <a href="/account/register">Sign-up</a></p>
</form>

<script src="/js/script.js"></script>